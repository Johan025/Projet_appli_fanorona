<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Histoire">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="424dp"
        android:layout_height="479dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/hist" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histoire du Fanorona"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="32.5dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="345dp"
        android:layout_height="240dp"
        android:width="45dp"
        android:text="Le Fanorona est un jeu traditionnel originaire de Madagascar, d’où son surnom de « Dames Malgaches ».
L’origine exacte du Fanorona n’est pas certaine. Ses points communs avec le jeu d’Alquerque (jeu Maure)
peuvent faire penser que les malgaches ont transformé le jeu d’Alquerque, apporté par les marchands
arabes sur l’île, pour inventer leur propre jeu (le tablier du Fanorona est en effet constitué de 2 tabliers
d’Alquerque accolés)"
        android:textSize="18.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861" />
</androidx.constraintlayout.widget.ConstraintLayout>